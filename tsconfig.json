{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2021"],                                
    "module": "commonjs",                           
    "strict": true,                  
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  }
}
